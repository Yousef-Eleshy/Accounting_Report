<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cash_transactions_report_tree_view" model="ir.ui.view">
            <field name="name">cash.transactions.report.tree.view</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false">
                    <field name="date"/>
                    <field name="ref" string="Ref"/>
                    <field name="name"/>
                    <field name="move_name" string="Transaction Number"/>
                    <field name="partner_id"/>
                    <field name="debit" sum="Cash In"/>
                    <field name="credit" sum="Cash Out"/>
                </tree>
            </field>
        </record>

        <record id="cash_transactions_report_search_view" model="ir.ui.view">
            <field name="name">cash.transactions.report.search.view</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="date"/>
                    <field name="account_id"/>
                    <field name="account_root_id"/>
                    <field name="account_internal_type"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <filter string="Date" name="date" date="date"/>
                    <separator/>
                    <filter string="Cash Journal" name="cash_journal"/>
                    <separator/>
                    <filter string="Cash In" name="cash_in" domain="[('debit','&gt;',0)]"/>
                    <separator/>
                    <filter string="Cash Out" name="cash_out" domain="[('credit','&lt;',0)]"/>
                    <separator/>
                    <filter string="All" name="all" domain="['|',('debit','&gt;',0),('credit','&lt;',0)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Date" name="groupby_date" domain="[]" context="{'group_by': 'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="cash_transactions_report_action" model="ir.actions.act_window">
            <field name="name">Cash Transactions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('parent_state','=','posted'),('journal_type','=','cash')]</field>
            <field name="target">current</field>
            <field name="search_view_id" ref="cash_transactions_report_search_view"/>
            <field name="view_id" ref="cash_transactions_report_tree_view"/>
        </record>

    </data>
</odoo>